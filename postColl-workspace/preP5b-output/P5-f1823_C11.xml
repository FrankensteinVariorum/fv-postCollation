            <head ana="start"/>CHAPTER V.<head ana="end"/>
            <seg th:eID="C11_app3-f1823"/>
            <p xml:id="novel1_letter4_chapter5_div4_div5_p1">
               <seg th:sID="C11_app5-f1823"/>C<hi xml:id="novel1_letter4_chapter5_div4_div5_p1_hi1">LERVAL</hi>
               <seg th:eID="C11_app5-f1823"/>then put the following letter into my hands.<seg th:sID="C11_app7-f1823__I" part="I"/>
               <seg th:eID="C11_app7-f1823__I" part="I"/>
            </p>
            <seg th:sID="C11_app7-f1823__F" part="F"/>
            <seg th:eID="C11_app7-f1823__F" part="F"/>
            <seg th:sID="C11_app8-f1823__I" part="I"/>
            <seg th:eID="C11_app8-f1823__I" part="I"/>
            <p xml:id="novel1_letter4_chapter5_div4_div5_p2">
